<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/backcover">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnTruth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="152dp"
        android:background="@drawable/dare_color"
        android:text="@string/truth"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/btnDare"
        app:layout_constraintEnd_toStartOf="@+id/btnDare"
        app:layout_constraintTop_toTopOf="@+id/btnDare"
        app:layout_constraintVertical_bias="0.0" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@id/btnDare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="88dp"
        android:background="@drawable/dare_color"
        android:text="@string/dare"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/imgSpin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/spinwheel" />

    <ImageView
        android:id="@+id/imgBottle"
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        android:onClick="spinBottle"
        app:layout_constraintBottom_toBottomOf="@+id/imgSpin"
        app:layout_constraintEnd_toEndOf="@+id/imgSpin"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="@+id/imgSpin"
        app:layout_constraintTop_toTopOf="@+id/imgSpin"
        app:layout_constraintVertical_bias="0.493"
        app:srcCompat="@drawable/bottle" />

</androidx.constraintlayout.widget.ConstraintLayout>